<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">



<h1>User info</h1>

         <% if @user.errors.any?%>
         <div id ="error_explanation">
           <h3><%= @user.errors.count %>error occurred</h3>
           <ul>
             <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
           </ul>
         </div>
        <%end%>

<%= form_with model: @user do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
ã€€<%= f.file_field :profile_image, accept: "image/*" %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>
<% end %>

</div>